{% extends "base.html.jinja" %}
{% block content %}

<div id="posts" hx-ext="sse" sse-connect="/sse/posts" sse-swap="message" hx-swap="beforeend">
	{{ posts|safe }}
</div>

{% if can_post %}
<form method="post" hx-boost="true" hx-on::after-request="if(event.detail.successful) this.reset()">
	<input type="text" name="author" placeholder="Your name" required />
	<input type="text" name="profile_picture" placeholder="Profile picture URL" />
	<input type="text" name="body" placeholder="What's on your mind?" required />
	<input type="submit" value="Post" />
</form>
{% endif %}

{% endblock %}